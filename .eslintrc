{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react"
    ],
    "plugins": [
        "babel",
        "react",
        "promise"
    ],
    "env": {
        "browser": true
    },
    "globals": {
        "__DEV__": false,
        "__TEST__": false,
        "__PROD__": false,
        "__COVERAGE__": false
    },
    "rules": {
        "key-spacing": 0,
        "jsx-quotes": [1, "prefer-single"],
        "max-len": [2, 120, 2],
        "object-curly-spacing": [2, "always"],
        "indent": ["error", 4],
        "eqeqeq": "off",
        "strict": "off",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/prop-types": 0,
        "react/jsx-no-bind": 0,
        "one-var": 0,
        "camelcase": 0
    }
}
